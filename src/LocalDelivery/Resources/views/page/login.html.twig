{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <h1>{{ "localDelivery.page.login.pageTitle"|trans }}</h1>

    {% if errors %}
        <div class="error-message-container alert alert-error">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form action="{{ path('delivery.boy.login') }}"
          method="post"
          data-form-csrf-handler="true">

        {{ sw_csrf('delivery.boy.login') }}

        <div class="form-row">
            <label>
                <span class="local-delivery-label">{{ "localDelivery.formLabels.email"|trans }}</span>
                <input type="email" name="email" value="{% if data %}{{ data.email }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>
                <span class="local-delivery-label">{{ "localDelivery.formLabels.password"|trans }}</span>
                <input type="password" name="password">
            </label>
        </div>

        <div class="form-row">
            <button type="submit">{{ "localDelivery.page.login.login"|trans }}</button>
        </div>
    </form>

    <div class="register-link">
        <p>{{ "localDelivery.page.login.registerText"|trans }} <a href="{{ path('delivery.boy.form') }}">{{ "localDelivery.page.login.registerLinkText"|trans }}</a></p>
    </div>

{% endblock %}
