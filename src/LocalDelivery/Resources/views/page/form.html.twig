{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_content %}
    <h1>Register as DeliveryBoy</h1>

    {% if errors %}
        <div class="error-message-container alert alert-error">
            <ul>
                {% for error in errors %}
                    <li>{{ error }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endif %}

    <form action="{{ path('delivery.boy.register') }}"
          method="post"
          data-form-csrf-handler="true">

        {{ sw_csrf('delivery.boy.register') }}

        <div class="form-row">
            <label>Title
                <input type="text" name="title" value="{% if data %}{{ data.title }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>Firstname
                <input type="text" name="firstname" value="{% if data %}{{ data.firstname }}{% endif %}">
            </label>
            <label>Lastname
                <input type="text" name="lastname" value="{% if data %}{{ data.lastname }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>Street
                <input type="text" name="street" value="{% if data %}{{ data.street }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>Email
                <input type="email" name="email" value="{% if data %}{{ data.email }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>Zipcode
                <input type="number" name="zipcode" value="{% if data %}{{ data.zipcode }}{% endif %}">
            </label>
            <label>City
                <input type="text" name="city">
            </label>
        </div>

        <div class="form-row">
            <label>Phone number
                <input type="number" name="phone_number" value="{% if data %}{{ data.phone_number }}{% endif %}">
            </label>
        </div>

        <div class="form-row">
            <label>Password
                <input type="password" name="password">
            </label>
            <label>Password Confirm
                <input type="password" name="password_confirm">
            </label>
        </div>

        <div class="form-row">
            <button type="submit">Submit</button>
        </div>

    </form>
{% endblock %}
