        <mj-divider border-color="#6666FF"></mj-divider>

        <mj-text font-size="18px" color="#000001" font-family="helvetica">
        	{{ 'mail.organization_reset_password.hello'|trans({'%name%': organization.salesChannel.translated.name}) }}<br/>
        	<br/>
          {{ 'mail.organization_reset_password.text'|trans|raw }}<br/>
